 <div class="container py-5 new-margin-top">
  <div class="row">
    <div class="">
      <div class="bg-white rounded p-3 shadow">
        <h3>rent my bike</h3>
        <%= simple_form_for @motorcycle do |f| %>
        <div class="d-flex justify-content-between">...</div>
          <%= f.input :title, placeholder: 'Titre de votre annonce' %>
          <%= f.input :description, placeholder: 'Description of your ad' %>
          <%= f.input :category, collection: ["Cross", "Enduro", "Trail", "Circuit", "Road"], selected: "Road" %>
          <%= f.input :capacity, collection: [">600cm³", "600cm³until1000³cm", "1000cm³<"], selected: "600cm³" %>
          <%= f.input :address, placeholder: 'Adress bike' %>
          <%= f.input :price, as: :currency %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
          <div>
        <%= link_to "Back to home", root_path %>
        </div>
      </div>
    </div>
  </div>
</div>

