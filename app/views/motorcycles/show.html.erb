  <div class='container'>


      <%= cl_image_tag @motorcycle.photo.key, height: 300, width: 400, crop: :fill, class: 'img' %>


      <div>
        <h1 class="title">
          <%= @motorcycle.title %>
        </h1><br>

        <ul>

          <li>
            <%= @motorcycle.capacity %>
          </li>
          <li>
            <%= @motorcycle.category %>
          </li>
          <li>
            <%= @motorcycle.description %>
          </li>
          <li>
            <%= @motorcycle.price %>
          </li>

        </ul>
      </div>

      <div>
      <h3>Reserver cette moto</h3>
      <%= simple_form_for [@motorcycle, @booking] do |f| %>
      <%= f.input :start_date, as: :date  %>
      <%= f.input :end_date, as: :date  %>
      <%= f.button :submit %>
      <% end %>
      </div>


  </div>

  <div class='bottom' class='button-md'>

      <%= link_to "Edit ✍🏼", edit_motorcycle_path(@motorcycle), class: 'btn btn-outline-secondary' %><br>
      <%= link_to "Retourner au Menu 🔙", root_path, class: 'btn btn-outline-secondary' %><br>
      <%= link_to "Delete this motorcycle 🗑️", motorcycle_path(@motorcycle), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this motorcycle?" }, class: 'btn btn-outline-secondary' %>

  </div>
